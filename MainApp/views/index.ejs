<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../public/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Layanan Manajemen Janji</h1>
    <!-- Daftar Janji -->
    <h2 class="mt-4">Daftar Janji</h2>
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Pasien</th>
            <th scope="col">Nama Dokter</th>
            <th scope="col">Poli</th>
            <th scope="col">Tanggal Janji</th>
            <th scope="col">Keterangan</th>
          </tr>
        </thead>
        <tbody>
          <% let n = 1; %>
          <% janji.forEach(jnj => { %>
          <tr>
            <th scope="row"><%= n++ %></th>
            <td><%= jnj.namaUser %></td>
            <td><%= jnj.namaDokter %></td>
            <td><%= jnj.poli %></td>
            <td><%= jnj.tanggalJanji.toISOString().split('T')[0] %></td>
            <td><%= jnj.keterangan %></td>
          </tr>
          <% }) %>
          <!-- Tambahkan baris tambahan sesuai dengan data janji -->
        </tbody>
      </table>

      <a href="/janji" class="btn btn-primary mt-4">Tambahkan Janji Baru</a>

    <!-- Daftar Dokter -->
    <h2 class="mt-4">Daftar Dokter</h2>
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Dokter</th>
            <th scope="col">Poli</th>
            <th scope="col">Deskripsi</th>
          </tr>
        </thead>
        <tbody>
          <% let i = 1; %>
          <% dokter.forEach(dokter => { %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= dokter.namaDokter %></td>
            <td><%= dokter.poli %></td>
            <td><%= dokter.Deskripsi %></td>
          </tr>
          <% }) %>
          <!-- Tambahkan baris tambahan sesuai dengan data janji -->
        </tbody>
      </table>

    
    
    
  </div>
</body>
</html>